# Environment variables template
# Copy this file to .env and replace with your actual API keys
# NEVER commit your actual .env file with real API keys to version control

# OpenAI API Key (optional)
OPENAI_API_KEY=your_openai_api_key_here

# xAI API Key (optional)  
XAI_API_KEY=your_xai_api_key_here

# Mistral API Key (for fallback AI responses)
MISTRAL_API_KEY=your_mistral_api_key_here

# OpenRouter AI Configuration for DeepSeek Chat (primary AI service)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter API Keys for specific models (optional)
OPENROUTER_QWEN_API_KEY=your_openrouter_qwen_api_key_here
OPENROUTER_GEMINI_API_KEY=your_openrouter_gemini_api_key_here

# Wolfram Alpha API Key (optional)
WOLFRAM_ALPHA_APPID=your_wolfram_alpha_appid_here


# GitHub Token (for repository analysis features)
GITHUB_TOKEN=your_github_token_here


# Memory Encryption Key (for encrypting sensitive data at rest)
# Generate a secure random key: openssl rand -base64 32
MEMORY_KEY=your_secure_memory_encryption_key_here

# Predictive Updates & Daily Suggestions Configuration
# Enable predictive updates feature (generates daily improvement suggestions)
ENABLE_PREDICTIVE_UPDATES=false

# Cron schedule for daily suggestions (default: "0 9 * * *" = 9:00 AM daily)
# Format: "minute hour day month dayOfWeek" or leave empty to use default
AI_UPDATES_CRON=

# Enable development/analysis talk in general chat (default: false)
# When false, Milla won't auto-analyze GitHub URLs or mention dev capabilities
# unless explicitly requested by the user
ENABLE_DEV_TALK=false

# Admin token for accessing protected AI updates endpoints (optional)
# Generate a secure token: openssl rand -hex 32
ADMIN_TOKEN=

# Voice Engine API Keys (optional - for multi-provider TTS support)
# Google Cloud Text-to-Speech (supports US English Southern accent, low latency)
GOOGLE_CLOUD_TTS_API_KEY=

# Azure Cognitive Services TTS (supports US English Southern accent, low latency)
AZURE_TTS_API_KEY=
AZURE_TTS_REGION=

# ElevenLabs TTS (supports expressive voices, medium latency)
ELEVENLABS_API_KEY=

# Voice Provider Configuration (optional)
# Options: browser-native, google-cloud, azure, elevenlabs, coqui
# Default: browser-native (no API key required)
VOICE_PROVIDER=browser-native

# Voice Quality Mode (optional)
# Options: low-latency, high-fidelity
# Default: low-latency
VOICE_QUALITY=low-latency

# Google OAuth Configuration (for browser automation and Google services)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:5000/oauth/callback

# Adaptive Scene System Configuration (optional)
# Enable adaptive scene rendering (experimental feature)
# Default: false (disabled)
ADAPTIVE_SCENES_ENABLED=false

# Scene performance mode (optional)
# Options: high-quality, balanced, performance
# Default: balanced
ADAPTIVE_SCENES_PERFORMANCE_MODE=balanced

