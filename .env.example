# Environment variables template
# Copy this file to .env and replace with your actual API keys
# NEVER commit your actual .env file with real API keys to version control

# OpenAI API Key (optional)
OPENAI_API_KEY=your_openai_api_key_here

# xAI API Key (optional)  
XAI_API_KEY=your_xai_api_key_here

# Mistral API Key (for fallback AI responses)
MISTRAL_API_KEY=your_mistral_api_key_here

# OpenRouter AI Configuration for DeepSeek Chat (primary AI service)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter API Keys for specific models (optional)
OPENROUTER_GROK_API_KEY=your_openrouter_grok_api_key_here
OPENROUTER_QWEN_API_KEY=your_openrouter_qwen_api_key_here

# Wolfram Alpha API Key (optional)
WOLFRAM_ALPHA_APPID=your_wolfram_alpha_appid_here

# GitHub Token (for repository analysis features)
GITHUB_TOKEN=your_github_token_here

# Predictive Updates Configuration (optional)
# Enable predictive updates feature (true/false, default: false)
ENABLE_PREDICTIVE_UPDATES=false

# AI Updates Sources (comma-separated RSS feed URLs, optional)
# Default sources include: OpenAI, xAI, Perplexity, HuggingFace, GitHub Changelog
AI_UPDATES_SOURCES=https://openai.com/blog/rss.xml,https://x.ai/blog/rss,https://perplexity.ai/blog/rss,https://huggingface.co/blog/feed.xml,https://github.blog/changelog/feed/

# AI Updates Cron Schedule (optional, e.g., "0 */6 * * *" for every 6 hours)
# Leave empty to disable automatic fetching (fetch manually via API)
# Examples: "0 0 * * *" (daily at midnight), "0 */6 * * *" (every 6 hours), "0 9 * * 1" (Monday at 9am)
AI_UPDATES_CRON=

# Admin Token (optional, required for /api/ai-updates/fetch if set)
ADMIN_TOKEN=