# Environment variables template
# Copy this file to .env and replace with your actual API keys
# NEVER commit your actual .env file with real API keys to version control

# OpenAI API Key (optional)
OPENAI_API_KEY=your_openai_api_key_here

# xAI API Key (optional)  
XAI_API_KEY=your_xai_api_key_here

# Mistral API Key (for fallback AI responses)
MISTRAL_API_KEY=your_mistral_api_key_here

# OpenRouter AI Configuration for DeepSeek Chat (primary AI service)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter API Keys for specific models (optional)
OPENROUTER_QWEN_API_KEY=your_openrouter_qwen_api_key_here
OPENROUTER_GEMINI_API_KEY=your_openrouter_gemini_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Hugging Face API Key (for image generation)
# Model: philipp-zettl/UnfilteredAI-NSFW-gen-v2
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=philipp-zettl/UnfilteredAI-NSFW-gen-v2

# Wolfram Alpha API Key (optional)
WOLFRAM_ALPHA_APPID=your_wolfram_alpha_appid_here


# GitHub Token (for repository analysis features)
GITHUB_TOKEN=your_github_token_here


# Memory Encryption Key (for encrypting sensitive data at rest)
# Generate a secure random key: openssl rand -base64 32
MEMORY_KEY=your_secure_memory_encryption_key_here

# Predictive Updates & Daily Suggestions Configuration
# Enable predictive updates feature (generates daily improvement suggestions)
ENABLE_PREDICTIVE_UPDATES=false

# Cron schedule for daily suggestions (default: "0 9 * * *" = 9:00 AM daily)
# Format: "minute hour day month dayOfWeek" or leave empty to use default
AI_UPDATES_CRON=

# Enable development/analysis talk in general chat (default: false)
# When false, Milla won't auto-analyze GitHub URLs or mention dev capabilities
# unless explicitly requested by the user
ENABLE_DEV_TALK=false

# Enable Milla's proactive repository ownership features (default: true)
# When enabled, Milla will proactively scan for improvements, create sandboxes, and suggest features
ENABLE_PROACTIVE_REPOSITORY_MANAGEMENT=true

# Enable autonomous code improvement (default: true)
# When enabled, Milla will automatically identify and fix code issues using CodingAgent
# Requires ENABLE_PROACTIVE_REPOSITORY_MANAGEMENT to be enabled
ENABLE_AUTONOMOUS_CODE_IMPROVEMENT=true

# Enable proactive messaging system (default: true)
# When enabled, Milla will send proactive messages based on time, context, and user activity
ENABLE_PROACTIVE_MESSAGES=true

# Admin token for accessing protected AI updates endpoints (optional)
# Generate a secure token: openssl rand -hex 32
ADMIN_TOKEN=

# Voice Engine API Keys (optional - for multi-provider TTS support)
# Google Cloud Text-to-Speech (supports US English Southern accent, low latency)
GOOGLE_CLOUD_TTS_API_KEY=

# Google API Key (for YouTube search, Maps, etc. - no OAuth required)
# Get from: https://console.cloud.google.com/apis/credentials
# Enable: YouTube Data API v3, Maps JavaScript API
GOOGLE_API_KEY=

# Azure Cognitive Services TTS (supports US English Southern accent, low latency)
AZURE_TTS_API_KEY=
AZURE_TTS_REGION=

# ElevenLabs TTS (supports expressive voices, medium latency)
ELEVENLABS_API_KEY=

# Voice Provider Configuration (optional)
# Options: browser-native, google-cloud, azure, elevenlabs, coqui
# Default: browser-native (no API key required)
VOICE_PROVIDER=browser-native

# Voice Quality Mode (optional)
# Options: low-latency, high-fidelity
# Default: low-latency
VOICE_QUALITY=low-latency

# Google OAuth Configuration (for browser automation and Google services)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/oauth/callback

# Adaptive Scene System Configuration (optional)
# Enable adaptive scene rendering (experimental feature)
# Default: false (disabled)
ADAPTIVE_SCENES_ENABLED=false

# Scene performance mode (optional)
# Options: high-quality, balanced, performance
# Default: balanced
ADAPTIVE_SCENES_PERFORMANCE_MODE=balanced

# Enable advanced LLM-based command parser (default: true)
# When false, falls back to a simpler, regex-based parser
ENABLE_ADVANCED_PARSER=true

# ============================================
# FEATURE FLAGS - Control Application Features
# ============================================

# Active Listening - Analyzes YouTube videos and pauses at relevant moments
ENABLE_ACTIVE_LISTENING=true

# Developer Mode - Enable by default (can be overridden in UI)
ENABLE_DEVELOPER_MODE=false

# YouTube Features
ENABLE_YOUTUBE_ANALYSIS=true
ENABLE_YOUTUBE_KNOWLEDGE_BASE=true
ENABLE_YOUTUBE_MILLALYZER=true

# Scene System Features
ENABLE_SCENE_DETECTION=true
ENABLE_WEATHER_EFFECTS=true
ENABLE_DYNAMIC_BACKGROUNDS=true

# AI Conversation Features
ENABLE_VOICE_ANALYSIS=true
ENABLE_IMAGE_GENERATION=true
ENABLE_CODE_GENERATION=true
ENABLE_WEB_SEARCH=true

# Proactive Features
ENABLE_BREAK_REMINDERS=true
ENABLE_MILESTONE_TRACKING=true
ENABLE_MOOD_TRACKING=true
ENABLE_DAILY_SUGGESTIONS=true

# Repository Features
ENABLE_REPOSITORY_ANALYSIS=true
ENABLE_AUTOMATED_PRS=true
ENABLE_CODE_ANALYSIS=true

# Smart Home Integration
ENABLE_SMART_HOME=true

# Wellness Features
ENABLE_GUIDED_MEDITATION=true
ENABLE_MEDITATION_TRACKING=true

# Agent System
ENABLE_AGENT_SYSTEM=true
ENABLE_CALENDAR_AGENT=true
ENABLE_EMAIL_AGENT=true
ENABLE_YOUTUBE_AGENT=true
ENABLE_GITHUB_AGENT=true

# Visual & Memory Features
ENABLE_VISUAL_MEMORY=true
ENABLE_VISUAL_RECOGNITION=true
ENABLE_FACE_RECOGNITION=false

# Advanced Features
ENABLE_METACOGNITIVE_SERVICE=true
ENABLE_PERSONALITY_FUSION=true
ENABLE_TOKEN_INCENTIVES=true
ENABLE_USER_ANALYTICS=true
ENABLE_SANDBOX_ENVIRONMENTS=false

# Real-world Integration
ENABLE_GOOGLE_CALENDAR=true
ENABLE_GOOGLE_GMAIL=true
ENABLE_GOOGLE_DRIVE=true
ENABLE_GOOGLE_PHOTOS=true
ENABLE_GOOGLE_MAPS=true
ENABLE_GOOGLE_TASKS=true

# External Services
ENABLE_WOLFRAM_ALPHA=true
ENABLE_WEATHER_SERVICE=true

# Performance & Testing
ENABLE_PERFORMANCE_PROFILING=false
ENABLE_AUTO_TESTING=false
ENABLE_AB_TESTING=false

# Email Configuration
SEND_EMAILS=false
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=your_email@example.com
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Memory Summarization
ENABLE_MEMORY_SUMMARIZATION=true


# ============================================
# LOCAL MODEL CONFIGURATION
# ============================================

# Enable local TFLite model (Gemma) for offline inference
# When enabled, chat responses can be generated locally without API calls
ENABLE_LOCAL_MODEL=false

# Prefer local model over cloud models (when both are available)
# Set to true to use local model by default, with fallback to cloud on error
PREFER_LOCAL_MODEL=false

# Path to local TFLite model (relative to project root)
# Default: locallm/gemma.tflite
LOCAL_MODEL_PATH=locallm/gemma.tflite
